      <%- include('../partials/header.ejs') %>
      <!-- ============================================================== -->
      <!-- End Left Sidebar - style you can find in sidebar.scss  -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Page wrapper  -->
      <!-- ============================================================== -->
      <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Tables</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Library
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container mt-4">
            <div class="row">

              <!-- LEFT THUMBNAILS -->
              <div class="col-md-2">
                <div class="d-flex flex-column gap-2">

                  <% if (product.images && product.images.length > 0) { %>

                    <% product.images.forEach(img => { %>
                      <img 
                        src="/<%= img %>" 
                        style="width: 100%; height: 80px; object-fit: cover; border:1px solid #ddd; cursor:pointer;"
                        onclick="document.getElementById('mainImage').src='/<%= img %>'"
                      >
                    <% }) %>

                  <% } else { %>
                    <p class="text-muted">No images available</p>
                  <% } %>

                </div>
              </div>

              <!-- CENTER MAIN IMAGE -->
              <div class="col-md-5 text-center">

                <img 
                  id="mainImage"
                  src="/<%= (product.images && product.images.length > 0) ? product.images[0] : 'default.png' %>"
                  style="width: 100%; height: 500px; object-fit: contain;"
                  class="border rounded"
                >

                <div class="mt-4 d-flex gap-3 justify-content-center">
                  <button class="btn btn-warning btn-lg">üõí Add to Cart</button>
                  <button class="btn btn-danger btn-lg">‚ö° Buy Now</button>
                </div>
              </div>

              <!-- ---------- RIGHT DETAILS AREA ---------- -->
              <div class="col-md-5">

                <h3><%= product.name %></h3>

                <span class="badge bg-success fs-6">4.4 ‚òÖ</span>
                <span class="text-muted">(1,89,466 Ratings & 8,417 Reviews)</span>

                <h2 class="mt-3">
                  ‚Çπ <%= product.price %>
                  <span class="text-danger fs-5 ms-2">13% off</span>
                </h2>

                <p class="text-success">Extra ‚Çπ2500 off</p>

                <h5 class="mt-4">Available Offers</h5>
                <ul>
                  <li>Bank Offer: 5% cashback on Axis Bank</li>
                  <li>Bank Offer: 5% cashback on SBI Credit Card</li>
                  <li>Special Discount available</li>
                </ul>

                <h5 class="mt-4">Product Details</h5>
                <p><strong>Category:</strong> <%= product.category.name %></p>
                <p><strong>SubCategory:</strong> <%= product.subcategory.name %></p>
                <p><strong>ExtraCategory:</strong> <%= product.extracategory.name %></p>
                <p><strong>Description:</strong> <%= product.description %></p>

              </div>

              <!-- REVIEW -->
              <hr class="mt-5">

              <h4>Add Your Review</h4>

              <form action="/review/<%= product._id %>" method="POST">

                <label class="mt-2">Rating:</label>
                <select name="rating" class="form-control w-25" required>
                  <option value="">Select</option>
                  <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</option>
                  <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê</option>
                  <option value="3">‚≠ê‚≠ê‚≠ê</option>
                  <option value="2">‚≠ê‚≠ê</option>
                  <option value="1">‚≠ê</option>
                </select>

                <label class="mt-3">Comment:</label>
                <textarea name="comment" rows="3" class="form-control" required></textarea>

                <button class="btn btn-primary mt-3">Submit Review</button>

              </form>

            </div>
        </div>


        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <%- include('../partials/footer.ejs') %>
        
